{
  "manifest_version": 2,
  "background": {
    "scripts": ["static/js/jquery-1.11.3.js", "static/js/extension.js"],
    "persistent": true
  },
  "name": "Shakespeare",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "static/image/mini_shakespeare.png",
    "default_popup": "templates/extension.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"]
}